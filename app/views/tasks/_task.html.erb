<div id="task<%= task.id %>" class="task <%= "last" if value.tasks.last == task%>">
    <div class="checkbox">
        <input type="checkbox" style="margin-left: 4px;">
    </div>
    <div class="task-text" id="task-text<%=task.id%>">
    	<%=task.name %>
    </div>
    <div class="task-edit">
      	<%=link_to "tasks/edit/#{task.id}", :remote => true do %>
            <i class="fa fa-lg fa-pencil fix-edit-icons clr-gray"></i>
        <%end%>
    	<span class="line-edit clr-gray">|</span>
        <%=link_to "tasks/#{task.id}", :remote => true, method: :delete do%>
            <i class="fa fa-lg fa-trash fix-edit-icons clr-gray", style="margin-left: 10px;"></i>
        <%end%>
    </div>
</div>
